@{
    ViewBag.Title = "Login";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Username")
        @Html.TextBox("username", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Password")
        @Html.Password("password", "", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-4">Login</button>
    <a href="@Url.Action("SignUp", "Accounts")" class="btn btn-link">Register</a>
}

